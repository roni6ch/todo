<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:onClick="onClickEditButton"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.TodoList.MainActivity" >

  <TextView
      android:id="@+id/textView1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/listViewMain1"
      android:layout_alignLeft="@+id/listViewMain1"
      android:text="_______________________________________________" />

  <Button
      android:id="@+id/addTaskBTN"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_above="@+id/textView1"
      android:layout_toLeftOf="@+id/Edit"
      android:background="@drawable/add"
      android:onClick="onClicknewTask" />

  <Button
      android:id="@+id/delete"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignBaseline="@+id/addTaskBTN"
      android:layout_alignBottom="@+id/addTaskBTN"
      android:layout_centerHorizontal="true"
      android:background="@drawable/delete"
      android:onClick="onClickOneDelete" />

  <Button
      android:id="@+id/done"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignBaseline="@+id/delete"
      android:layout_alignBottom="@+id/delete"
      android:layout_alignRight="@+id/textView1"
      android:layout_marginRight="31dp"
      android:background="@drawable/done"
      android:onClick="onClickOneDone" />

  <Button
      android:id="@+id/Edit"
      style="?android:attr/buttonStyleSmall"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignBaseline="@+id/clearBTN"
      android:layout_alignBottom="@+id/clearBTN"
      android:layout_toLeftOf="@+id/delete"
      android:background="@drawable/edit"
      android:onClick="onClickEditButton" />

  <Button
      android:id="@+id/clearBTN"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignParentTop="true"
      android:layout_toLeftOf="@+id/done"
      android:background="@drawable/clear"
      android:onClick="onClick_Del" />

  <ListView
      android:id="@+id/listViewMain1"
      style="@style/activated"
      android:layout_width="match_parent"
      android:layout_height="350dp"
      android:layout_alignParentBottom="true"
      android:layout_toLeftOf="@+id/delete" >

  </ListView>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/listViewMain1"
      android:layout_alignLeft="@+id/delete"
      android:text="Latitude:"
      android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
      android:id="@+id/mLatitude"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/textView2"
      android:layout_alignBottom="@+id/textView2"
      android:layout_toRightOf="@+id/textView2"
      android:text="TextView"
      android:typeface="monospace" />

  <TextView
      android:id="@+id/TextView01"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/textView2"
      android:layout_alignLeft="@+id/textView2"
      android:text="Longitude:"
      android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
      android:id="@+id/mLongitude"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/mLatitude"
      android:layout_toRightOf="@+id/TextView01"
      android:text="TextView"
      android:typeface="monospace" />

 
  <TextView
      android:id="@+id/mLastUpdateTimeTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/mLongitude"
      android:layout_toRightOf="@+id/textView3"
      android:text="00:00:00" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/mLastUpdateTimeTextView"
      android:layout_alignLeft="@+id/TextView01"
      android:text="LastUpdate: " />

  <Button
      android:id="@+id/button1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/mLastUpdateTimeTextView"
      android:layout_alignLeft="@+id/done"
      android:layout_alignRight="@+id/done"
      android:layout_marginBottom="27dp"
      android:background="@drawable/map"
      android:onClick="onClick_Map" />
  
</RelativeLayout>